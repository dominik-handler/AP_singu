#porechop in singularity

Bootstrap: docker
From: ubuntu:16.04

%runscript
    porechop "$@"

%post
    apt-get update
    apt-get -y install wget build-essential python3.5 git-core python3-setuptools

    easy_install3 pip

    git clone https://github.com/rrwick/Porechop.git
    cd Porechop
    python3 setup.py install
   
    mkdir /groups
    mkdir /scratch
    mkdir /scratch-ii2
    mkdir /clustertmp

%test
    porechop -h 
    
