#minimap2 in singularity

Bootstrap: docker
From: ubuntu:18.04

%labels
  maintainer Dominik Handler <Dominik Handler@imba.oeaw.ac.at>
  minimap2 @ 081df6a

%runscript
    "$@"

%post
    apt-get update
    apt-get --assume-yes install wget curl bzip2 git-core build-essential zlib1g-dev

    git clone https://github.com/lh3/minimap2
    cd minimap2 && make
    cp minimap2 /usr/bin 

%environment

%test
    
