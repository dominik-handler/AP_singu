#graphmap in singularity

Bootstrap: docker
From: ubuntu:16.04

%runscript
    samtools "$@"

%post
    apt-get update
    apt-get --assume-yes install wget tar
    apt-get --assume-yes install sudo

    sudo apt-get update
    sudo apt-get -y install build-essential
    sudo apt-get -y install zlib1g
    sudo apt-get -y install cmake
    sudo apt-get -y install libncurses-dev libbz2-dev liblzma-dev
    sudo apt-get update

    sudo apt-get -y install git-core   
    sudo apt-get -y install zlib1g-dev     
    
    mkdir -p /Software
    cd /Software/

    wget https://github.com/samtools/samtools/releases/download/1.9/samtools-1.9.tar.bz2
    tar -xvf samtools-1.9.tar.bz2
    cd samtools-1.9   
    ./configure --prefix=/Software/samtools
    make
    make install  
      
    sudo mkdir /groups
    sudo mkdir /scratch
    sudo mkdir /scratch-ii2
    sudo mkdir /clustertmp

%environment
    PATH="PATH=/Software/samtools/bin:${PATH}"
    export $PATH


%test
